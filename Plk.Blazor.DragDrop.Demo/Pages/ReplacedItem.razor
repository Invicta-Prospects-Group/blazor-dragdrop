@page "/replacedItem"

<div class="row">
    <b class="col-12">
        DropedItem:@DropedItem
    </b>
    <br />
    <b class="col-12">
        ReplacedItem:@replacedItem
    </b>
</div>
<hr />

<div class="grid-container">
    <Dropzone Id="qqq" Items="Items" InstantReplace="true" TItem="string" OnItemDrop="@((p)=>OnItemDrop(p, "dp1"))" OnReplacedItemDrop="@((p)=>OnReplacedItemDrop(p, "dp1"))">
        <div>
            <div class="grid-item">@context</div>
        </div>
    </Dropzone>
</div>
<br />
<br />
<br />
<div class="grid-container">
    <Dropzone Id="xyz" Items="Items2" InstantReplace="true" TItem="string" OnItemDrop="@((p)=>OnItemDrop(p, "dp2"))" OnReplacedItemDrop="@((p)=>OnReplacedItemDrop(p, "dp2"))">
        <div>
            <div class="grid-item">@context</div>
        </div>
    </Dropzone>
</div>

@code {
    private string DropedItem = "";
    private string replacedItem = "";
    public List<string> Items = new List<string>()
{
        "1",
        "2",
        "3",
        "4",
        "5",
        "6",
        "7",
        "8",
        "9",
    };

    public List<string> Items2 = new List<string>()
    {
        "10",
        "11",
        "12",
        "13",
    };

    public void OnItemDrop(string item, string id)
    {
        DropedItem = $"{item} ({id})";
        StateHasChanged();
    }
    public void OnReplacedItemDrop(string item, string id)
    {
        replacedItem = $"{item} ({id})";
        StateHasChanged();
    }
}
